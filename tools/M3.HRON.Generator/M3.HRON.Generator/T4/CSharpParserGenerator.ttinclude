<#+
    void OutputStateChoice (ParserState parserState, NextParserState nextParserState)
    {
#>
                    Partial_StateChoice__From_<#=parserState.Name#>__Choose_<#=string.Join ("_", nextParserState.Names)#> ();
<#+
    }
