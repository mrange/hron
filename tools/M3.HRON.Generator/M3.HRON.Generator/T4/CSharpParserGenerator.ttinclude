    void OutputStateTransition (ParserState parserState, string to)
    {
#>
                            Partial_StateTransition__From_<#=parserState.Name#> ();
                            Partial_StateTransition__From_<#=parserState.Name#>__To_<#=to#> ();
                            Partial_StateTransition__To_<#=to#> ();
<#+
    }
